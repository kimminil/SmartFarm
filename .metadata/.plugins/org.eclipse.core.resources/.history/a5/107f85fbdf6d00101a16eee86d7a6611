void can_mcp2515_init(void)
{
    if(!MCP2515_Initialize()) {
        printf("MCP2515 SPI initialize error!\r\n");
        Error_Handler();
    }
    if(!MCP2515_SetConfigMode()) {

        printf("Config error!\r\n");
        Error_Handler();
    }
    // üí° ÎπÑÌä∏Î†àÏù¥Ìä∏ ÏÑ§Ï†ï ÌïÑÏöî
    // Ïòà: MCP2515_SetBitrate(500000);  // ÎìúÎùºÏù¥Î≤ÑÏóê Îî∞Îùº Ìï®ÏàòÎ™Ö Îã§Î•º Ïàò ÏûàÏùå

    if(!MCP2515_SetNormalMode()) {
        printf("Normal set fail!\r\n");
        Error_Handler();
    }
    printf("MCP2515 success\r\n");
}

